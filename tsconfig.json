{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@env": ["env"],
      "@server": ["server"],
      "@container": ["container"],
      "@controller": ["controllers/controller"],
      "@containers/*": ["containers/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@docs/*": ["docs/*"],
      "@routes": ["routes/index"],
      "@routes/*": ["routes/*"],
    },
  },
  "include": [
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
