{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@env": ["env"],
      "@app": ["app"],
      "@container": ["container"],
      "@controller": ["controllers/controller"],
      "@auth": ["auth/index"],
      "@containers/*": ["containers/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@docs/*": ["docs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@errors/*": ["errors/*"],
      "@repository/*": ["repositories/*"],
      "@requests/*": ["requests/*"],
      "@routes": ["routes/index"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@validators/*": ["validators/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
